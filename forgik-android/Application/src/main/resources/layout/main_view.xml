<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <!-- Main layout scroll -->
    <ScrollView android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/footer">

        <!-- Main layout -->
        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Premises list -->
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/premises"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>
            <TableLayout android:id="@+id/antecedents_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEEE"/>

            <!-- Conclusions list -->
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/conclusions"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"/>
            <TableLayout android:id="@+id/consequents_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEEE"/>

            <!-- Information text -->
            <TextView android:id="@+id/information_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/please_select_consequent"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"/>

            <!-- Rules list -->
            <TextView android:id="@+id/rules_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rules"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"/>
            <TableLayout android:id="@+id/rules_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Proof -->
            <TextView android:id="@+id/proof_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/proof"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"/>
            <TableLayout android:id="@+id/proof_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0"
                android:background="#EEEEEE"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom layout -->
    <LinearLayout android:id="@+id/footer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <!-- Spacing -->
        <Space android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <!-- Cancel proof button -->
        <Button android:id="@+id/cancel_subproof_button"
            android:text="@string/cancel_subproof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"/>

        <!-- Next challenge button -->
        <Button android:id="@+id/next_challenge_button"
            android:text="@string/next_challenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"/>
    </LinearLayout>
</RelativeLayout>
