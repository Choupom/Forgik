<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <!-- Main layout scroll -->
    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Main layout -->
        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Premises list -->
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/premises"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>
            <TableLayout android:id="@+id/antecedents_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEEE"/>

            <!-- Conclusions list -->
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/conclusions"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"/>
            <TableLayout android:id="@+id/consequents_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEEE"/>

            <!-- Information text -->
            <TextView android:id="@+id/information_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/please_select_consequent"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"/>

            <!-- Apply rule text -->
            <TextView android:id="@+id/apply_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apply_rule"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"/>

            <!-- Rules table -->
            <TableLayout android:id="@+id/rules_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom layout -->
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">
        <!-- Spacing -->
        <Space android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <!-- Cancel proof button -->
        <Button android:id="@+id/cancel_proof_button"
            android:text="@string/cancel_proof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textSize="24dp"/>

        <!-- Complete proof button -->
        <Button android:id="@+id/reroll_challenge_button"
            android:text="@string/reroll_challenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textSize="24dp"/>
    </LinearLayout>
</LinearLayout>
